<%= form_for @board, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class:"block text-gray-700 text-sm font-bold mb-3" %>
    <%= f.text_field :name, class:'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    <%= render 'errors', model: @board, attribute: :name %>
  </div>
  <div class="mb-3">
    <%= f.label :email, class:"block text-gray-700 text-sm font-bold mb-3" %>
    <%= f.text_field :email, class:'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    <%= render 'errors', model: @board, attribute: :email %>
  </div>
  <div class="mb-3">
    <%= f.label :height, class:"block text-gray-700 text-sm font-bold mb-3" %>
    <%= f.number_field :height, class:'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    <%= render 'errors', model: @board, attribute: :height %>
  </div>
  <div class="mb-3">
    <%= f.label :width, class:"block text-gray-700 text-sm font-bold mb-3" %>
    <%= f.number_field :width, class:'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    <%= render 'errors', model: @board, attribute: :width %>
  </div>
  <div class="mb-3">
    <%= f.label :bombs, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.number_field :bombs, class:'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    <%= render 'errors', model: @board, attribute: :bombs %>
  </div>
  <%= f.submit 'Generate Board', class:'inline-flex mt-4 justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2' %>
<% end %>